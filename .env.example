# ==================== APPLICATION ====================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ==================== DATABASE ====================
DATABASE_URL=postgresql://vendora:vendora_password@localhost:5432/vendora_db

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ==================== JWT ====================
JWT_SECRET=vendora_jwt_secret_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=vendora_refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# ==================== MEILISEARCH ====================
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=changeme_meili_master_key

# ==================== EMAIL (SMTP) ====================
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=re_xxxxxxxxxxxxxxxxxxxx
SMTP_FROM_NAME=Vendora Platform
SMTP_FROM_EMAIL=orders@vendora.com

# ==================== PDF GENERATION ====================
PDF_STORAGE_PATH=/tmp/vendora-pdfs
PDF_BASE_URL=http://localhost:3000

# ==================== STORAGE ====================
STORAGE_TYPE=local
STORAGE_PATH=/tmp/vendora-storage

# ==================== SECURITY ====================
BCRYPT_ROUNDS=10
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ==================== LOGGING ====================
LOG_LEVEL=debug
